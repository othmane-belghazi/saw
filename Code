import streamlit as st
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns


############################
# Utilitaires mathÃ©matiques #
############################

def _segment_series(series: pd.Series, n_segments: int, method: str = "quantile") -> pd.Series:
    """Retourne une sÃ©rie d'entiers 0..n_segments-1 selon la mÃ©thode choisie."""
    if method == "quantile":
        # qcut gÃ¨re les duplications Ã©ventuelles de quantiles via duplicates='drop'
        return pd.qcut(series, n_segments, labels=False, duplicates="drop")
    elif method == "equal-width":
        return pd.cut(series, n_segments, labels=False, include_lowest=True)
    else:
        raise ValueError("MÃ©thode de segmentation inconnue : choisissez 'quantile' ou 'equal-width'.")


def build_majoration_matrix(
    df: pd.DataFrame,
    elr_col: str = "ELR",
    conv_col: str = "conversion",
    loss_col: str = "loss",
    prem_col: str = "premium",
    n_elr: int = 20,
    n_conv: int = 10,
    method: str = "quantile",
):
    """Calcule la matrice de majoration normalisÃ©e et la matrice des effectifs.

    Retourne
    -------
    M : DataFrame (n_elr x n_conv)
        Matrice normalisÃ©e dont la moyenne pondÃ©rÃ©e vaut 1.
    N : DataFrame (n_elr x n_conv)
        Effectifs (nombre d'expositions) par cellule.
    """
    df = df.copy()

    # Segmentation
    df["elr_seg"] = _segment_series(df[elr_col], n_elr, method)
    df["conv_seg"] = _segment_series(df[conv_col], n_conv, method)

    # AgrÃ©gations
    N = (
        df.pivot_table(index="elr_seg", columns="conv_seg", values=prem_col, aggfunc="count", fill_value=0)
        .astype(int)
        .sort_index()
    )
    P = df.pivot_table(index="elr_seg", columns="conv_seg", values=prem_col, aggfunc="sum", fill_value=0.0)
    S = df.pivot_table(index="elr_seg", columns="conv_seg", values=loss_col, aggfunc="sum", fill_value=0.0)

    # ELR par cellule avec gestion divisions par zÃ©ro
    with np.errstate(divide="ignore", invalid="ignore"):
        ELR_ij = S / P.replace(0, np.nan)

    ELR_portefeuille = df[loss_col].sum() / df[prem_col].sum()
    m_brut = ELR_ij / ELR_portefeuille

    # Normalisation (moyenne pondÃ©rÃ©e = 1)
    poids_total = N.values.sum()
    normal_const = (m_brut * N).values.sum() / poids_total
    M = m_brut / normal_const

    return M, N


def ipf_factorisation(
    M: pd.DataFrame, N: pd.DataFrame, tol: float = 1e-6, max_iter: int = 100
):
    """ItÃ©rative Proportional Fitting pour approximer M â‰ˆ a_i * b_j.

    Parameters
    ----------
    M : DataFrame
        Matrice normalisÃ©e (moyenne pondÃ©rÃ©e = 1).
    N : DataFrame
        Matrice des effectifs, mÃªme shape que M.
    tol : float
        CritÃ¨re de convergence sur les a_i.
    max_iter : int
        Nombre maximal d'itÃ©rations.

    Returns
    -------
    a : ndarray (n_elr,)
    b : ndarray (n_conv,)
    """
    a = np.ones(M.shape[0])
    b = np.ones(M.shape[1])
    N_val = N.values
    M_val = M.values

    for _ in range(max_iter):
        a_old = a.copy()

        # Mise Ã  jour de a_i
        for i in range(len(a)):
            num = (M_val[i, :] * b * N_val[i, :]).sum()
            den = (b * N_val[i, :]).sum()
            a[i] = num / den if den > 0 else 1.0

        # Normalisation pour conserver la moyenne pondÃ©rÃ©e = 1
        a /= np.average(a, weights=N.sum(axis=1))

        # Mise Ã  jour de b_j
        for j in range(len(b)):
            num = (M_val[:, j] * a * N_val[:, j]).sum()
            den = (a * N_val[:, j]).sum()
            b[j] = num / den if den > 0 else 1.0

        b /= np.average(b, weights=N.sum(axis=0))

        if np.max(np.abs(a - a_old)) < tol:
            break

    return a, b


####################################
#        Application Streamlit     #
####################################

def main():
    st.set_page_config(
        page_title="Matrice de Majoration ELR Ã— Conversion",
        layout="wide",
    )

    st.title("ðŸ” Matrice de majoration entre ELR et Taux de conversion")
    st.markdown(
        """
Cette application construit et visualise une matrice de majoration selon la mÃ©thode dÃ©crite
(rapport ELR / ELR_portefeuille, puis normalisation). Chargez vos donnÃ©es ou laissez
l'application en gÃ©nÃ©rer pour la dÃ©monstration.

*PrÃ©â€‘requis (si fichier custom)* :

* premium  â€“ prime Ã©mises ou exposÃ©es (positif)
* loss     â€“ coÃ»t des sinistres associÃ©s
* ELR      â€“ ratio sinistres / prime (facultatif si loss et premium prÃ©sents, il sera recalculÃ©)
* conversion â€“ probabilitÃ© ou taux de souscription
        """
    )

    ###############
    # Sidebar UI  #
    ###############

    with st.sidebar:
        st.header("ParamÃ¨tres")
        uploaded_file = st.file_uploader(
            "Fichier CSV", type=["csv"], help="Colonnes attendues : premium, loss, ELR, conversion"
        )
        n_elr = st.number_input("Nombre de segments ELR", 1, 100, 20, 1)
        n_conv = st.number_input("Nombre de segments Conversion", 1, 100, 10, 1)
        method = st.selectbox("MÃ©thode de segmentation", ["quantile", "equal-width"])
        visu_ipf = st.checkbox("Afficher la factorisation multiplicative (IPF)", value=False)

    ###############
    # Data import  #
    ###############

    if uploaded_file is not None:
        df = pd.read_csv(uploaded_file)
    else:
        st.info("Aucun fichier dÃ©tectÃ© âž¡ gÃ©nÃ©ration d'un jeu de donnÃ©es simulÃ© (10 000 expositions).")
        rng = np.random.default_rng(42)
        n = 10_000
        premium = rng.uniform(100, 500, size=n)
        loss_ratio = rng.beta(2, 5, size=n)  # ELR ~ Beta(2,5)
        loss = loss_ratio * premium
        conversion = rng.uniform(0, 1, size=n)
        df = pd.DataFrame(
            {
                "premium": premium,
                "loss": loss,
                "ELR": loss_ratio,
                "conversion": conversion,
            }
        )

    # VÃ©rifications de colonnes
    expected_cols = {"premium", "loss", "ELR", "conversion"}
    missing_cols = expected_cols - set(df.columns)
    if missing_cols:
        st.error(f"Colonnes manquantes dans le fichier : {', '.join(missing_cols)}")
        st.stop()

    # (Re)calcul ELR pour cohÃ©rence
    df["ELR"] = df["loss"] / df["premium"].replace(0, np.nan)

    #########################
    # Calcul de la matrice  #
    #########################

    try:
        M, N = build_majoration_matrix(
            df,
            elr_col="ELR",
            conv_col="conversion",
            loss_col="loss",
            prem_col="premium",
            n_elr=int(n_elr),
            n_conv=int(n_conv),
            method=method,
        )
    except Exception as e:
        st.error(f"Erreur lors du calcul de la matrice : {e}")
        st.stop()

    #########################
    # Visualisation Heatmap #
    #########################

    st.subheader("Matrice de majoration normalisÃ©e")
    fig, ax = plt.subplots(figsize=(8, 6))
    sns.heatmap(M, ax=ax, cmap="RdYlGn", center=1, linewidths=0.3)
    ax.set_xlabel("Segment conversion (j)")
    ax.set_ylabel("Segment ELR (i)")
    ax.set_title("Facteur > 1 = majoration / < 1 = minoration")
    st.pyplot(fig)

    st.markdown(
        "â„¹ La moyenne pondÃ©rÃ©e (par effectif) de la matrice est exactement 1, assurant la neutralitÃ© tarifaire."
    )

    #########################
    # Factorisation IPF     #
    #########################

    if visu_ipf:
        st.subheader("Factorisation multiplicative (IPF)")
        a, b = ipf_factorisation(M, N)

        col1, col2 = st.columns(2)
        with col1:
            st.markdown("*Facteurs ELR (aáµ¢)*")
            fig1, ax1 = plt.subplots()
            ax1.bar(range(len(a)), a)
            ax1.set_xlabel("Segment ELR i")
            ax1.set_ylabel("aáµ¢")
            st.pyplot(fig1)

        with col2:
            st.markdown("*Facteurs Conversion (bâ±¼)*")
            fig2, ax2 = plt.subplots()
            ax2.bar(range(len(b)), b)
            ax2.set_xlabel("Segment conversion j")
            ax2.set_ylabel("bâ±¼")
            st.pyplot(fig2)

        st.info(
            "Produit tensoriel â‰ˆ matrice :  Máµ¢â±¼ â‰ˆ aáµ¢Â·bâ±¼  (erreur rÃ©duite aprÃ¨s convergences de 4â€“5 itÃ©rations)."
        )

    #########################
    #   TÃ©lÃ©chargements     #
    #########################

    st.subheader("TÃ©lÃ©chargements")
    csv_M = M.to_csv(index=True).encode("utf-8")
    st.download_button(
        label="ðŸ“¥ TÃ©lÃ©charger la matrice (CSV)",
        data=csv_M,
        file_name="matrice_majoration.csv",
        mime="text/csv",
    )

    csv_N = N.to_csv(index=True).encode("utf-8")
    st.download_button(
        label="ðŸ“¥ TÃ©lÃ©charger les effectifs (CSV)",
        data=csv_N,
        file_name="effectifs_majoration.csv",
        mime="text/csv",
    )


if _name_ == "_main_":
    main()
